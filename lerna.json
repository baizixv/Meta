{
  "packages": ["packages/*"],
  "ignore": ["web"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "tags": true,
      "npmClient": "yarn",
      "npmTag": "latest",
      "ignoreChanges": ["**/*.md", "docs/**"]
    }
  }
}
